<Window x:Class="BattleCity.WPF.StartUpParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleCity.WPF"
        mc:Ignorable="d"
        Background="Black"
        ResizeMode="NoResize"
        Title="Battle City" Height="420" Width="300">
    <StackPanel>
        <Button x:Name="sp" Background="Aqua" Content="egy játékos" FontSize="24" Width="150" Height="50" Margin="0,40,0,20" Click="Singleplayer_Click"/>
        <Button x:Name="mp" Content="két játékos" FontSize="24" Width="150" Height="50" Margin="0,20" Click="Multiplayer_Click"/>
        <Button Content="START" FontSize="24" Width="150" Height="50" Margin="0,80" Click="Start_Click"/>
    </StackPanel>
</Window>
